@model E_Commerce.Model.AdminViewModel

@{
    ViewBag.Title = "ViewAllAdmin";
    Layout = "~/Views/Shared/_SuperAdminLayout.cshtml";
    var i = 1;
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Product List</h4>
                <div class="table-responsive">
                    @if (ViewData["Message"] != null)
                    {
                        <h5 class="confirmationmessage" style="color:red">@ViewData["Message"]</h5>
                    }
                    <div class="mb-3" id="searchitem">
                        <div class="">
                            <input type="text" class="form-control searchitemid" id="searchitemcategory" placeholder="Search...." aria-describedby="emailHelp">
                        </div>
                        <div class="">
                            <select class="form-select" id="filteritem" aria-label="Default select example">
                                <option value="10" selected>10</option>
                                <option value="20">20</option>
                                <option value="30">30</option>
                                <option value="40">40</option>
                            </select>
                        </div>
                    </div>
                    <table class="table table-striped table-bordered zero-configuration">
                        <thead>
                            <tr>
                                <th>No</th>
                                <th>DeliveryMan Official Id</th>
                                <th>DeliveryMan</th>
                                <th>DeliveryMan Name</th>
                                <th>Total Complete Assignment</th>
                                <th>Total Login</th>
                                <th>Last Logout</th>
                                <th>Delete</th>
                                <th>Update</th>
                                <th>Single Details</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var deliveryman in Model.DeliveryManeList)
                            {
                                <tr>
                                    <td>
                                        @i
                                    </td>
                                    <td>
                                        @deliveryman.DeliveryManeOfficialId
                                    </td>
                                    <td>
                                        <img src="@deliveryman.DeliveryManeProfilePic" width="100" height="100" alt="">
                                    </td>
                                    <td>
                                        @deliveryman.DevisionName
                                    </td>
                                    <td>
                                        @deliveryman.TotalAssignmentComplete
                                    </td>
                                    <td>
                                        @deliveryman.UserTotalLogin
                                    </td>
                                    <td>
                                        @deliveryman.UserLastLogin
                                    </td>
                                    <td>
                                        <button onclick="showmodal(@deliveryman.DeliverManId,@deliveryman.UserId)" class="btn btn-danger">Delete</button>
                                    </td>
                                    <td>
                                        @Html.ActionLink("Update", "GetSingleSupplier", new { Id = deliveryman.DeliverManId }, new { title = "Edit Item", @class = "btn btn-success", data_toggle = "tooltip", data_placement = "top" })
                                    </td>
                                    <td>
                                        @Html.ActionLink("Update", "GetSingleSubCategory", new { Id = deliveryman.DeliverManId }, new { title = "Edit Item", @class = "btn btn-success", data_toggle = "tooltip", data_placement = "top" })
                                    </td>
                                    <td>
                                        @Html.ActionLink("Update", "GetSingleSubCategory", new { Id = deliveryman.DeliverManId }, new { title = "Edit Item", @class = "btn btn-success", data_toggle = "tooltip", data_placement = "top" })
                                    </td>
                                </tr>
                                i++;
                            }
                        </tbody>
                    </table>
                    <div class="pagination-table-nav">
                        <nav aria-label="Page navigation example">
                            <ul class="pagination">
                                <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                                @for (i = 1; i <= Model.totalpage; i++)
                                {
                                    <li class="page-item">
                                        <a class="page-link" onclick="showdata(@i)">@i</a>
                                    </li>
                                }
                                <li class="page-item"><a class="page-link" href="#">Next</a></li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="id01" class="modal">
    <span class="close" title="Close Modal">×</span>
    @using (Html.BeginForm("DeleteDeliveryMan", "StaffSettings", FormMethod.Post, new { @class = "modal-content" }))
    {
        <div class="container">
            <h1>Delete Category</h1>
            <p>Are you sure you want to delete this Category?</p>
            <input type="hidden" name="id" id="categoryid" />
            <input type="hidden" name="userid" id="userid" />
            <div class="clearfix">
                <button type="button" id="close-CategoryDelete" , class="btn btn-danger">Cancel</button>
                <input type="submit" value="Delete" class="btn btn-success" />
            </div>
        </div>
    }
</div>
<script>
    // Get the modal
    $(document).ready(function () {
        $('#open-CategoryDelete').click(function () {
            /* $('#bookId').val($(this).data('id'));*/
            var inputF = document.getElementById("categoryid");
            let dataId = $(this).attr("data-id");
            inputF.setAttribute('value', dataId);
            /* document.getElementById("categoryid").innerHTML = dataId;*/
            $('#id01').fadeIn();
        });
    });
    $(document).ready(function () {
        $('#close-CategoryDelete').click(function () {
            $('#id01').hide();
        });
    });
</script>
<script>
    function showmodal(n, m) {
        document.getElementById('id01').style.display = 'block';
        $("#categoryid").val(n);
        $("#userid").val(m);
    }
    function closemenu() {
        $("#id01").hide();
    }
    function showdataview(showdata) {
        $.ajax({
            url: "/StaffSettings/GetpaginatiotabledataDeliveryMan",
            Method: "POST",
            data: showdata,
            success: function (data) {
                $('.hide-row').empty();
                data = JSON.parse(data);
                var serialno = pagesize + 1;
                var element = ""
                $.each(data, function (i) {
                    element += `
             <tr class="hide-row">
                  <td>
                     ${serialno}
                 </td>
                  <td>
                    <img src="${data[i].CategoryImage}" width="100" height="100" alt="">
                 </td>
                  <td>
                    ${data[i].CategoryName}
                 </td>
                 <td>
                     ${data[i].CategoryDescription}
                 </td>
                 <td>
                     <button id="open-CategoryDelete" data-toggle="modal" data-id="  ${data[i].CategoryId}" class="btn btn-danger">Delete</button>
                 </td>
                 <td>
                     Html.ActionLink("Update", "GetSingleCategory", new { Id =  data[i].CategoryId }, new { title = "Edit Item", class = "btn btn-success", data_toggle = "tooltip", data_placement = "top" })
                 </td>
                  <td>
                   <button id="myBtn" class = "btn btn-success" onclick="finddata(${data[i].CategoryId})">Category Details</button>
                 </td>
             </tr>
                 `;
                    $("#table").append(element);
                    serialno++;
                    var element = "";
                });
            },
            error: function () {
                alert('Failed to receive the Data');
                console.log('Failed ');
            }
        })
    }
</script>
