<script>
    // Filter
    $(".filter-items").change(function () {
        debugger
        var filteritem = $(".filter-items");
        if (filteritem.eq(1).is(':checked') == true) {
            var SearchKeyword = filteritem.eq(1).value;
        }
        else {
            var SearchKeyword = filteritem.eq(0).value;
        }
        var showdata =
        {
            SearchKeyword: SearchKeyword
        }
        if (SearchKeyword != null) {
            $.ajax({
                url: "/Contact/Filtermail",
                Method: "POST",
                data: showdata,
                success: function (data) {
                    $('.hide-row').css("display", "none");;
                    data = JSON.parse(data);
                    var serialno = 1;
                    var element = "";
                    if (data.length > 0) {
                        $('.tabblemsg').css("display", "none");
                        $.each(data, function (i) {
                            if (data[i].Updatemessage == 0) {
                                element += `
                 <tr class="hide-row multiedelete unreademail">
                     <td>
                        <input type="checkbox" class="multiedeleteitem" name="multidelete" value="${data[i].Emailid}">
                    </td>
                     <td>
                        ${serialno}
                    </td>

                     <td>
                       ${data[i].EmailSubject}
                    </td>
                    <td>
                        ${data[i].Email}
                    </td>
                     <td>
                        ${data[i].SentDate}
                    </td>
                     <td>
                      <span>Customer Full Name: ${data[i].CustomerFullName}</span>
                     <span>Customer Email:${data[i].CustomerEmailAddress}</span>
                    </td>
                    <td>
                        <button id="open-CategoryDelete" data-toggle="modal" data-id="  ${data[i].Emailid}" class="btn btn-danger">Delete</button>
                    </td>
                    <td>
                       <a class = "btn btn-success", data_toggle = "tooltip", data_placement = "top"  href="/ContactC/GetsingleEmail/${data[i].Emailid}">Read Email</a>

                    </td>

                </tr>
                    `;
                            }
                            else {
                                element += `
               <tr class="hide-row multiedelete reademail">
               <td>
                        <input type="checkbox" class="multiedeleteitem" name="multidelete" value="${data[i].Emailid}">
                    </td>
                     <td>
                        ${serialno}
                    </td>

                     <td>
                       ${data[i].EmailSubject}
                    </td>
                    <td>
                        ${data[i].Email}
                    </td>
                     <td>
                        ${data[i].SentDate}
                    </td>
                     <td>
                      <span>Customer Full Name: ${data[i].CustomerFullName}</span>
                      <span>Customer Email:${data[i].CustomerEmailAddress}</span>
                    </td>
                    <td>
                        <button id="open-CategoryDelete" data-toggle="modal" data-id="  ${data[i].Emailid}" class="btn btn-danger">Delete</button>
                    </td>
                    <td>
                       <a class = "btn btn-success", data_toggle = "tooltip", data_placement = "top"  href="/ContactC/GetsingleEmail/${data[i].Emailid}">Read Email</a>

                    </td>
                </tr>
                    `;
                            }
                            $("#table").append(element);
                            serialno++;
                            var element = "";
                        });
                    }
                    else {
                        $('.tabblemsg').css("display", "block");
                    }
                },
                error: function () {
                    alert('Failed to receive the Data');
                    console.log('Failed ');
                }

            })

        }
        else {
            $('.hide-row').css("display", "block");;
        }
    })
    $(".checkconfirmation").click(function () {
        $(".multideleteconfirmation").toggle();
    });
    function showreadmodal(id, read) {
        $("#myModal").css("display", "block");
        $(".hide-row").eq(read).removeClass("unreademail");
        $(".hide-row").eq(read).addClass("reademail");
        var emailid = {
            id: id
        }
        $.ajax({
            url: "/Contact/GetsingleEmail",
            Method: "POST",
            data: emailid,
            success: function (data) {

                data = JSON.parse(data);
                $("#customername").text("Customer Full Name: " + data.CustomerFullName);
                $("#Subject").text("Subject: " + data.EmailSubject);
                $("#email").text(data.Email);
                $("#customeremail").text("Customer Email: " + data.CustomerEmailAddress);
            },
            error: function () {
                alert('Failed to receive the Data');
                console.log('Failed ');
            }
        })
    }

    $("#multiedelete").change(function () {
        var multiedelete = document.getElementsByClassName("multiedeleteitem");
        var multiedeleteischecked = $("#multiedelete");
        if (multiedeleteischecked.is(':checked') == true) {
            $("#deleteallbutton").css("display", "block");

            for (i = 0; i <= multiedelete.length; i++) {
                $(".multiedeleteitem").eq(i).attr('checked', true);
            }
        }
        else {
            $("#deleteallbutton").css("display", "none");
            for (i = 0; i <= multiedelete.length; i++) {
                $(".multiedeleteitem").eq(i).attr('checked', false);
            }
        }

    });
    $(".multiedeleteitem").change(function () {
        debugger
        var j = 0;
        var check = $(".multiedeleteitem");
        var multiedelete = document.getElementsByClassName("multiedeleteitem");
        for (i = 0; i <= multiedelete.length; i++) {
            if (check.eq(i).is(':checked') == true) {
                j++;
            }
        }
        if (i > 0) {
            $("#deleteallbutton").css("display", "block");
        }
        else {
            $("#deleteallbutton").css("display", "none");
        }
    })
</script>
