            $("#input-number").val(increment);

        }
        let decrement = () => {
            let decrement = parseInt($("#input-number").val());
            decrement - 1;
            $("#input-number").val(decrement);
        }
        $("#navbarDropdown3").click(() => {
            $("#cart-item").toggle();
            document.getElementById("cart-list-item").innerHTML = busketitem.map(function (element) {
