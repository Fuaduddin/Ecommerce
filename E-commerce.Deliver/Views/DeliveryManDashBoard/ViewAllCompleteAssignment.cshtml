<!-- The Modal -->
<div id="myModal" class="modal" style="display: none">
    <!-- Modal content -->
    <div class="modal-content">
        <span class="close" onclick="close()">&times;</span>
        <div>
            <h5 id="customername"></h5>
            <h6 id="customeremail"></h6>
